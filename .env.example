# SentimentEdge - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Alpaca Trading API (Paper Trading)
# ============================================
# Get your paper trading keys from: https://app.alpaca.markets/paper/dashboard/overview
# IMPORTANT: Use PAPER trading keys, NOT live trading keys!

ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================
# Reddit API
# ============================================
# Create a Reddit app at: https://www.reddit.com/prefs/apps
# 1. Click "create app" or "create another app"
# 2. Select "script" type
# 3. Set redirect URI to http://localhost:8080 (not used, but required)
# 4. Copy the client ID (under "personal use script")
# 5. Copy the secret

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SentimentEdge/1.0 by your_reddit_username

# ============================================
# NewsAPI
# ============================================
# Get free API key from: https://newsapi.org/register
# Free tier: 100 requests/day (sufficient for this project)

NEWS_API_KEY=your_newsapi_key_here

# ============================================
# Database
# ============================================
# PostgreSQL/TimescaleDB credentials
# Default values work for docker-compose setup

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sentimentedge
POSTGRES_USER=trader
POSTGRES_PASSWORD=changeme_to_secure_password

# ============================================
# Redis
# ============================================
# Redis connection settings
# Default values work for docker-compose setup

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty for no password (local dev)
# Set a password for production

# ============================================
# Application Settings
# ============================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentiment model configuration
SENTIMENT_MODEL=ProsusAI/finbert
SENTIMENT_BATCH_SIZE=20
# Increase batch size for GPU, decrease for CPU

# ============================================
# Frontend
# ============================================

# API endpoints (for frontend)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws/live

# ============================================
# Monitoring
# ============================================

# Grafana admin password
GRAFANA_PASSWORD=admin
# Change this in production!

# ============================================
# Optional: Advanced Settings
# ============================================

# Market data provider (default: alpaca)
# MARKET_DATA_PROVIDER=alpaca

# Additional subreddits to monitor (comma-separated)
# ADDITIONAL_SUBREDDITS=investing,stockmarket,options

# Trading mode (paper or live)
# WARNING: Only use 'live' if you know what you're doing!
TRADING_MODE=paper

# Risk limits (override config.yaml)
# MAX_POSITIONS=5
# POSITION_SIZE_PCT=0.10
# MAX_DAILY_LOSS_PCT=0.05

# ============================================
# Development Settings
# ============================================

# Enable debug mode (more verbose logging)
# DEBUG=false

# Hot reload for development
# HOT_RELOAD=true

# Mock data for testing (skip real API calls)
# USE_MOCK_DATA=false
